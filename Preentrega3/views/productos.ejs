<%- include('_head') %>

<body>
  
  <main class="container text-center justify-content-center">
    <%- include('_usuario') %> 

    <%- include("_nav") %>

    <h1> Productos </h1>
    <form>
      <button onclick="addMocks()">Añadir 25 mocks (productos)</button>
  
      <button onclick="deleteAllProductos()" >Borrar todos</button>
    </form>

    <% if (listExists) { %> 
    <div class="table-responsive px-4">
      <h3>Filtros posibles : <%- tagsFiltrables %></h3>
      <table class="table table-dark">
        <tr style="color: yellow;"> <th>Title</th> <th>Price</th> <th>Thumbnail</th> <th>+</th></tr>
        <% for (let i = 0; i < productos.length; i++) { %>
        <tr>
          <td><%=productos[i].titulo%></td>
          <td><%=productos[i].precio%></td>
          <td><%=productos[i].thumbnail%></td>
          <td><a href="/addCarritoProd/<%-user.email%>/<%-productos[i]._id%>"><button> Añadir al Carrito </button></a></td>
        </tr>
        <%};%>
      </table>
    </div>
    <% } else { %> 
      <p>No se encontraron productos </p>
    <% } %> 


  </main>

  <%- include('_foot') %> 